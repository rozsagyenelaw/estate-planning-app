rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Clients collection
    match /clients/{clientId} {
      // For now, allow all read/write operations
      // TODO: Add authentication and restrict to authorized users only
      allow read, write: if true;

      // For production with authentication, use:
      // allow read, write: if request.auth != null;

      // For more granular control:
      // allow read: if request.auth != null;
      // allow create: if request.auth != null;
      // allow update: if request.auth != null && request.auth.uid == resource.data.createdBy;
      // allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
  }
}
