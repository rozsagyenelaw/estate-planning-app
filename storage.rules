rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Client documents
    match /clients/{clientId}/documents/{document} {
      // For now, allow all read/write operations
      // TODO: Add authentication and restrict to authorized users only
      allow read, write: if true;

      // Limit file size to 10MB
      allow write: if request.resource.size < 10 * 1024 * 1024;

      // For production with authentication, use:
      // allow read: if request.auth != null;
      // allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024;
    }

    // Trust documents (original uploaded trusts)
    match /trusts/{clientId}/{document} {
      // For now, allow all read/write operations
      // TODO: Add authentication and restrict to authorized users only
      allow read, write: if true;

      // Limit file size to 20MB (trusts can be larger)
      allow write: if request.resource.size < 20 * 1024 * 1024;

      // For production with authentication, use:
      // allow read: if request.auth != null;
      // allow write: if request.auth != null && request.resource.size < 20 * 1024 * 1024;
    }

    // Amendment PDFs
    match /amendments/{clientId}/{amendmentId} {
      // For now, allow all read/write operations
      // TODO: Add authentication and restrict to authorized users only
      allow read, write: if true;

      // Limit file size to 10MB
      allow write: if request.resource.size < 10 * 1024 * 1024;

      // For production with authentication, use:
      // allow read: if request.auth != null;
      // allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024;
    }

    // Original deeds uploaded for trust transfer
    match /deeds/{clientId}/{document} {
      // For now, allow all read/write operations
      // TODO: Add authentication and restrict to authorized users only
      allow read, write: if true;

      // Limit file size to 20MB (deed PDFs can be large)
      allow write: if request.resource.size < 20 * 1024 * 1024;

      // For production with authentication, use:
      // allow read: if request.auth != null;
      // allow write: if request.auth != null && request.resource.size < 20 * 1024 * 1024;
    }

    // Test deeds for OCR testing
    match /test-deeds/{document} {
      // For now, allow all read/write operations
      allow read, write: if true;

      // Limit file size to 20MB
      allow write: if request.resource.size < 20 * 1024 * 1024;
    }

    // OCR output files (generated by Vision API)
    match /ocr-output/{allPaths=**} {
      // Allow read/write for OCR processing
      allow read, write: if true;
    }
  }
}
